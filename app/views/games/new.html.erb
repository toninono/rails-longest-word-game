<div class="container">
  <h1>New game</h1>
  <div class="random letters">
        <div><%= @letters.join (" ") %></div>

  </div>

  <div class="user-input">
    <p>What is the longest word you can find?</p>
    <form action="/score" class="form-inline" method="post">
      <div class="input-group mb-3">
        <input type="text" name="word" class="form-control">
        <div class="input-group-append">
          <input type="submit" value="Play" class="form-control btn btn-primary">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag  :letters, @letters %>
        </div>
    </form>
  </div>
</div>
